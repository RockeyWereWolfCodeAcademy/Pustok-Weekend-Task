@{
    ViewData["Title"] = "Register";
}

@model RegisterVM

<section class="breadcrumb-section">
	<h2 class="sr-only">Site Breadcrumb</h2>
	<div class="container">
		<div class="breadcrumb-contents">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
					<li class="breadcrumb-item active">Register</li>
				</ol>
			</nav>
		</div>
	</div>
</section>
<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<form method="post">
			<div class="login-form">
				<h4 class="login-title">New Customer</h4>
				<p><span class="font-weight-bold">I am a new customer</span></p>
				<div class="row">
					<div class="col-lg-6 mb--15">
						<label asp-for="Name">Name</label>
						<input class="mb-0 form-control" type="text" id="name"
							   placeholder="Enter your name">
						<span class="text-danger" asp-validation-for="Name"></span>
					</div>
					<div class="col-lg-6 mb--15">
						<label asp-for="Surname">Surname</label>
						<input class="mb-0 form-control" type="text" id="name"
							   placeholder="Enter your surname">
						<span class="text-danger" asp-validation-for="Surname"></span>
					</div>
					<div class="col-lg-6 mb--20">
						<label asp-for="Username">Username</label>
						<input class="mb-0 form-control" type="email" id="email" placeholder="Enter Your Username Here..">
						<span class="text-danger" asp-validation-for="Username"></span>
					</div>
					<div class="col-lg-6 mb--20">
						<label asp-for="Email">Email</label>
						<input class="mb-0 form-control" type="email" id="email" placeholder="Enter Your Email Address Here..">
						<span class="text-danger" asp-validation-for="Email"></span>
					</div>
					<div class="col-lg-6 mb--20">
						<label asp-for="Password">Password</label>
						<input class="mb-0 form-control" type="password" id="password" placeholder="Enter your password">
						<span class="text-danger" asp-validation-for="Password"></span>
					</div>
					<div class="col-lg-6 mb--20">
						<label asp-for="ConfirmPassword">Repeat Password</label>
						<input class="mb-0 form-control" type="password" id="repeat-password" placeholder="Repeat your password">
						<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
					</div>
					<div class="text-danger" asp-validation-summary="ModelOnly"></div>
					<div class="col-md-12">
						<a class="btn btn-outlined">Register</a>
					</div>
				</div>
			</div>
		</form>
	</div>
</main>

