@{
	ViewData["Title"] = "Shop";
}
@model IEnumerable<ProductListVM>

@section scripts {
    <script>
		var page = 2;
		var pageSize = 4;
		$("#load-product").on("click", "#prod-load", function (ev) {
			ev.preventDefault();
			$.ajax({
				url: "@Url.Action("ShopProductLoad", "Shop")?page=" + page + "&pageSize=" + pageSize,
				success: function (data) {
					$("#records").append(data);
					page++;
				}
			});
		})
