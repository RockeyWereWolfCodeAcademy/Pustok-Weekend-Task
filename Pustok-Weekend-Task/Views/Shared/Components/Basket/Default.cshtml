@model List<BasketProductItemVM>
<div class="cart-block">
    <div class="cart-total">
        <span class="text-number">
            @Model.Sum(x=>x.Count)
        </span>
        <span class="text-item">
            Shopping Cart
        </span>
        <span class="price">
            £@Model.Sum(p=> p.Count * p.Price)
            <i class="fas fa-chevron-down"></i>
        </span>
    </div>
    <div class="cart-dropdown-block">
        <div class=" single-cart-block ">
            <div class="cart-product" style="display:flex; flex-direction:column">
                @foreach(var product in Model)
                {
                    <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id" class="image">
                        <img src="~/@product.ImageUrl" alt="">
                    </a>
                    <div class="content">
                        <h3 class="title">
                            <a asp-action="Details" asp-controller="Product" asp-route-id="@product.Id">
                                @product.Name
                            </a>
                        </h3>
                        <p class="price"><span class="qty">@product.Count ×</span> £@Math.Round(product.Price - (product.Price * (decimal)product.Discount/100)*product.Count, 2)</p>
                    </div>
                }
            </div>
        </div>
        <div class=" single-cart-block ">
            <div class="btn-block">
                <a href="cart.html" class="btn">
                    View Cart <i class="fas fa-chevron-right"></i>
                </a>
                <a href="checkout.html" class="btn btn--primary">
                    Check Out <i class="fas fa-chevron-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>